{
  "name": "lacylights-mcp",
  "version": "1.6.5",
  "description": "MCP Server for AI-powered theatrical lighting design",
  "main": "dist/index.js",
  "scripts": {
    "codegen": "graphql-codegen --config codegen.yml",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:coverage:node25": "NODE_OPTIONS='--localstorage-file=/tmp/jest-localstorage' jest --coverage",
    "test:contracts": "jest --testMatch='**/*.contract.test.ts' --runInBand --testTimeout=30000",
    "test:node25": "NODE_OPTIONS='--localstorage-file=/tmp/jest-localstorage' jest",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "mcp",
    "lighting",
    "theatrical",
    "ai",
    "dmx"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@apollo/client": "^4.0.10",
    "@modelcontextprotocol/sdk": "^1.22.0",
    "cross-fetch": "^4.1.0",
    "graphql": "^16.9.0",
    "openai": "^6.7.0",
    "zod": "^4.2.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.38.0",
    "@graphql-codegen/cli": "^6.1.0",
    "@graphql-codegen/typescript": "^5.0.7",
    "@graphql-codegen/typescript-operations": "^5.0.6",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.4",
    "eslint": "^9.38.0",
    "globals": "^16.5.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.49.0"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "overrides": {
    "js-yaml": "^4.1.1"
  }
}
