{
  "name": "lacylights-mcp",
  "version": "1.1.1",
  "description": "MCP Server for AI-powered theatrical lighting design",
  "main": "dist/index.js",
  "scripts": {
    "codegen": "graphql-codegen --config codegen.yml",
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "prebuild": "npm run codegen",
    "predev": "npm run codegen",
    "start": "node dist/index.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:contracts": "jest --testMatch='**/*.contract.test.ts' --runInBand --testTimeout=30000",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "mcp",
    "lighting",
    "theatrical",
    "ai",
    "dmx"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@apollo/client": "^4.0.6",
    "@modelcontextprotocol/sdk": "^1.20.1",
    "cross-fetch": "^4.1.0",
    "graphql": "^16.9.0",
    "openai": "^6.5.0",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@eslint/js": "^9.37.0",
    "@graphql-codegen/cli": "^6.0.1",
    "@graphql-codegen/typescript": "^5.0.2",
    "@graphql-codegen/typescript-operations": "^5.0.2",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.8.1",
    "eslint": "^9.37.0",
    "globals": "^16.4.0",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.5",
    "tsx": "^4.20.5",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
